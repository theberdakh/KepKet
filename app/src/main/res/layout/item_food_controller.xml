<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/normal_100"
    android:layout_marginVertical="@dimen/small_100"
    android:background="@drawable/bg_search_bar"
    android:orientation="horizontal"
    android:padding="@dimen/small_100"
    android:weightSum="10">


    <ImageView
        android:id="@+id/food_image"
        android:layout_width="90dp"
        android:layout_height="90dp" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/small_100">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.KepKet.Black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="18" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:visibility="gone"
            android:textAppearance="@style/TextAppearance.KepKet.Black"
            android:textColor="@color/light_gray"
            tools:text="18" />


        <TextView
            android:layout_marginTop="@dimen/small_100"
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textAppearance="@style/TextAppearance.KepKet.Black"
            android:textColor="@color/bright_green"
            tools:text="18" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:gravity="center"
        >

        <View
            android:id="@+id/increase"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_controller_increase" />

        <TextView
            android:id="@+id/counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/small_100"
            android:gravity="center"
            android:textColor="@color/dark_green"
            android:background="@color/light_azure"
            android:textAppearance="@style/TextAppearance.KepKet.Black"
            tools:text="1" />

        <View
            android:id="@+id/decrease"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_controller_decrease" />


    </LinearLayout>

</LinearLayout>
